<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingBottom="32dp"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:background="#FFFFFF">

    <!-- Khung hiển thị kết quả dịch -->
    <TextView
        android:id="@+id/textTranslatedResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_rounded"
        android:gravity="top"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:text="Kết quả sau khi dịch sẽ hiển thị tại đây"
        android:textColor="#b35a02"
        android:textSize="16sp" />

    <!-- Hàng 2 nút ngang nhau -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnExportFile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Xuất File"
            android:background="@drawable/bg_rounded_button"
            android:textColor="#fff" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnBackToMain"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Quay về"
            android:background="@drawable/bg_rounded_button"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>

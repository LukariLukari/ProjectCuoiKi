<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cấu hình API"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/editTextApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="OpenAI API Key"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/editTextBaseUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Base URL (tùy chọn)"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/editTextModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Model (ví dụ: gpt-4o)"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông số dịch"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/editTextMaxToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Max Tokens (ví dụ: 4096)"
                    android:inputType="number"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/editTextTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Temperature (ví dụ: 0.7)"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/editTextConcurrentRequests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Số luồng đồng thời (ví dụ: 5)"
                    android:inputType="number"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu Cài Đặt"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4F8EF7"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>